%ul#artists.list-unstyled
	- @artists.each do |artist|
		%li=link_to artist.name, artist_url(artist), id: "#{artist.name.gsub(/\s+/, "")}", class: "artist-link"
#canvas
#random-images
	-@artists.each do |artist|
		=image_tag(artist.pieces.first.image.url(:thumb), class: "#{artist.name.gsub(/\s+/, "")}-img", data: {artist: artist.name.gsub(/\s+/, "")}) unless artist.pieces.blank?

