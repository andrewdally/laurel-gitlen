=form_for [:admin, @story], html: {class: "form"} do |f|
	.control-group
		=f.label :date
		=f.date_select :date
	.checkbox
		%label
			= f.check_box :featured
			This is a featured story.
	.control-group
		=f.text_area :story
	.well.artist-checks.clearfix
		%h4 Choose Artists
		- Artist.all.each do |artist|
			.checkbox
				%label
					= check_box_tag 'story[artists_ids][]', artist.id, @story.artists.include?(artist)
					= artist.name
	.form-group
		=f.submit 'Save', class: 'btn btn-default'
		
:javascript
	$("#story_story").jqte({
		center: false,
		color: false,
		fsize: false,
		format: false,
		left: false,
		ol: false,
		indent: false,
		outdent: false,
		remove: false,
		right: false,
		sub: false,
		strike: false,
		source: false,
		sup: false,
		title: false,
		ul: false,
		p: false
	});