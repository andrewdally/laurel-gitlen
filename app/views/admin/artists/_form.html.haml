=form_for [:admin, @artist], html: {role: 'form'}, data: {remote: !@artist.new_record?} do |f|
	%fieldset
		.form-group
			=f.label :name
			=f.text_field :name, class: 'form-control'
		.checkbox
			%label
			=f.check_box :gallery_roster
			On gallery roster
		-if @artist.new_record?
			.form-group
				=f.submit 'Save', class: 'btn btn-default'
